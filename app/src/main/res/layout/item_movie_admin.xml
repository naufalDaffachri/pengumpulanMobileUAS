<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/card_background"
    android:elevation="2dp">

    <TextView
        android:id="@+id/txt_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="Movie Title"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_edit"
        android:fontFamily="@font/gantari_bold"/>

    <TextView
        android:id="@+id/txt_movie_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="Genre"
        android:textSize="14sp"
        android:textColor="#666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_movie_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/gantari_bold"/>

    <TextView
        android:id="@+id/txt_movie_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="Duration"
        android:textSize="14sp"
        android:textColor="#666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_movie_genre"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/gantari_bold"/>

    <TextView
        android:id="@+id/txt_movie_schedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="Schedule"
        android:textSize="14sp"
        android:textColor="#666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_movie_duration"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/gantari_bold"/>

    <TextView
        android:id="@+id/txt_cinema"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="Cinema Name"
        android:textSize="16sp"
        android:textColor="#444"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_movie_schedule"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/gantari_bold"/>

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit Button"
        android:src="@drawable/baseline_edit_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/blue2" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="56dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete Button"
        android:src="@drawable/baseline_delete_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/btn_edit"
        app:layout_constraintTop_toBottomOf="@id/btn_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/blue2" />
</androidx.constraintlayout.widget.ConstraintLayout>
